# CNC COPILOT - Environment Configuration
# Copy this file to .env and adjust values

# Application Settings
APP_ENV=development
DEBUG=True
SECRET_KEY=change_this_in_production_super_secret_key_123

# Database & Redis
REDIS_URL=redis://localhost:6379/0
DATABASE_URL=sqlite:///./sql_app.db

# LLM Providers (Optional keys for real implementations)
OPENAI_API_KEY=sk-...
OPENLLAMA_MODEL_PATH=./models/open_llama_3b_v2_q4.bin

# Fanuc CNC Connection
FANUC_IP=192.168.1.100
FANUC_PORT=8193
USE_MOCK_CNC=True

# Kafka (RAG System)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_LOGS=cnc_logs
USE_MOCK_KAFKA=True
